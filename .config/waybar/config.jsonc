{
    "reload_style_on_change": true,

    "layer": "top",
    "modules-left": ["niri/workspaces", "custom/separator", "niri/window"],
    "modules-right": ["custom/separator", "custom/battery", "custom/separator", "clock"],

    "niri/workspaces": { "format": " {index} " },
    "niri/window": { "format": " {title}" },
    "custom/battery": {
      "exec": "$XDG_CONFIG_HOME/waybar/scripts/battery.sh --low 10 --full 95",
      "restart-interval": "60",
      "return-type": "json",
      "format": " {icon} {percentage}% ",
      "format-icons": {
          "charging": ["󰢟","󰢜","󰂆","󰂇","󰂈","󰢝","󰂉","󰢞","󰂊","󰂋","󰂅"],
          "discharging": ["󰂎","󰁺","󰁻","󰁼","󰁽","󰁾","󰁿","󰂀","󰂁","󰂂","󰁹"]
      }
    },
    "clock": {
        "format": " {:%Y-%m-%d %H:%M}",
        "timezone": "Europe/Moscow",
    },
    "custom/separator": { "format": "|" }
}
